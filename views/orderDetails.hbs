<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="stylesheets/style.css">
    <title>Pizza Bar</title>
</head>
<body>
    <div class="wrapper">
        <header>
            <div class="brand">
                <a href="/"><p>Pizza Bar</p></a>
            </div>

            <nav>
                <ul>
                    <li><a href="/order">Order Online</a></li>
                    <li><a href="/orderHistory">Order History</a></li>
                    <li><a href="/logout">LogOut</a></li>
                </ul>
            </nav>
            
        </header>

        <main>

            <table id="order-details">

            </table>


            <section class="confirm-intro">
                <h1>Hi, {{username}}, please review your order:</h1>
            </section>

            <section class="order-detail">
                
                <div class="pizzaTable">
                    
                    <table>
                    <tr>
                        <th>Pizza</th>
                        <th>Quantity</th>
                        <th>Price</th>
                    </tr>

                   <tr>
                       <td>
                        <div id="pizzaSize">
                            
                        </div> 
                        <br>
                        <div id="pizzaCrust">
                            
                        </div> 
                        <br>
                        <div id="pizzaTopping">
                            Toppings: 
                        </div>
                        <br>
                        <div id="pizzaSauce">
                            Sauce:
                        </div>
                             
                       </td>
                       <td id="pizzaQuantity"></td>
                       <td id="pizzaPrice"></td>
                   </tr>
                </table>
                </div>
                
                <div class="sub-total">
                
                    <table>
                        <tr>
                            <td id="delivery-fee">
                            </td>
                            
                        </tr>
                        <tr>
                            <td id="tax">
                            </td>
                        </tr>
                        <tr>
                            <td id="totalPrice">
                            </td>
                        </tr>
                    </table>
               
                </div>
            </section>

            <section class="cal-sub-btn">
                <div class="cancel">
                    <a href="/order">
                        <button>Cancel Order</button>
                    </a>
                </div>

                <div class="sub">
                    <a href="/delivery-time">
                        <button type="submit" id = "confirm">Confirm Your Order</button>
                    </a>
                    
                </div>
            </section>
        </main>

        <footer>
            <div class="copyright">
                <p>
                   &copy2020 CZ
                </p>
            </div>
        </footer>

    </div>
    <script src="javascripts/jquery.min.js"></script>
    <script src="javascripts/order.js"></script>
    <script type="module" src="javascripts/orderDetails.js"></script>
</body>
</html>